{% extends 'partials/base.html.twig' %}
{% set menu = true %}

{% block content %}  
    <div class="half-splash">
        {% include 'partials/media.html.twig' %}
    </div>

    <div class="container">
        <header class="post-header">
            <h1 class="post-title">NOW</h1>
        </header>

        <div class="post-list row auto-clear">
          {% for post in page.collection if post.date|date("U") > "now"|date_modify("-1 year")|date("U") %}
            <div class="col-md-3">
              <div class="post-desc">
                <div>
                  <h3>{{ post.title }}</h3>
                  <div class="date">{{ post.date|date("d-m-Y") }}</div>
                  <div>{{ post.content[:200]|striptags }} ...</div>
                  <a class="post-link" href="{{ post.url }}">See more</a>
                </div>
              </div>
            </div>
          {% else %}
          <div class="col-md-12">
            <em>No recent events yet ...</em>
          </div>
          {% endfor %}
        </div>
        
        <header class="post-header">
            <h2 class="post-title">Events archive</h2>
        </header>

        <div class="post-list row auto-clear">
          {% for post in page.collection if post.date|date("U") < "now"|date_modify("-1 year")|date("U") %}
            <div class="col-md-3">
              <div class="post-desc">
                <div>
                  <h3>{{ post.title }}</h3>
                  <div class="date">{{ post.date|date("d-m-Y") }}</div>
                  <div>{{ post.content[:200]|striptags }} ...</div>
                  <a class="post-link" href="{{ post.url }}">See more</a>
                </div>
              </div>
            </div>
          {% else %}
          <div class="col-md-12">
            <em>No archive events so far ...</em>
          </div>
          {% endfor %}
        </div>
      
        <div class="now-container">{{ page.content }}</div>

    </div>
{% endblock %}
