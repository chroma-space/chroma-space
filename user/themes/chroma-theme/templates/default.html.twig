{% extends 'partials/base.html.twig' %}
{% set menu = true %}

{% block content %}
    <div class="half-splash">
        {% include 'partials/media.html.twig' %}
    </div>
    <div class="container">
        <div class="post">
            <header class="post-header">
                <h1 class="post-title">{{ page.title }}</h1>
            </header>

            <article class="post-content">
                <div class="post-content">
                    {{ page.content }}
                </div>
            </article>
        </div>
    </div>
{% endblock %}